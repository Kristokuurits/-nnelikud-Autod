{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Õnnelike Autode API",
    "description": "API autoteenuste ja järjekorra haldamiseks"
  },
  "host": "localhost:8080",
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    "/onnelikud-autod": {
      "get": {
        "tags": ["Auto Teenused"],
        "summary": "Kõik õnnelikud autod",
        "description": "Tagastab kõik autod",
        "responses": {
          "200": {
            "description": "Tagastab kõik autod",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Auto"
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Auto Teenused"],
        "summary": "Lisa uus auto",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UusAuto"
            }
          }
        ],
        "responses": {
          "201": { "description": "Uus auto lisatud" },
          "400": { "description": "Vigased andmed" }
        }
      }
    },
    "/onnelikud-autod/{id}": {
      "get": {
        "tags": ["Auto Teenused"],
        "summary": "Leia auto ID järgi",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Tagastab auto detailid",
            "schema": {
              "$ref": "#/definitions/Auto"
            }
          },
          "404": { "description": "Autot ei leitud" }
        }
      },
      "put": {
        "tags": ["Auto Teenused"],
        "summary": "Uuenda auto andmeid",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          },
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UusAuto"
            }
          }
        ],
        "responses": {
          "200": { "description": "Auto uuendatud" },
          "404": { "description": "Autot ei leitud" }
        }
      },
      "delete": {
        "tags": ["Auto Teenused"],
        "summary": "Kustuta auto",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": { "description": "Auto kustutatud" },
          "404": { "description": "Autot ei leitud" }
        }
      }
    },
    "/auto-jarjekord": {
      "get": {
        "tags": ["Järjekord"],
        "summary": "Kõik autod järjekorras",
        "responses": {
          "200": {
            "description": "Tagastab kõik autod järjekorras",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/AutoJärjekord"
              }
            }
          }
        }
      }
    },
    "/auto-jarjekord/{id}": {
      "get": {
        "tags": ["Järjekord"],
        "summary": "Leia auto järjekorrast ID järgi",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Tagastab auto detailid järjekorras",
            "schema": {
              "$ref": "#/definitions/AutoJärjekord"
            }
          },
          "404": { "description": "Auto ei ole järjekorras" }
        }
      },
      "post": {
        "tags": ["Järjekord"],
        "summary": "Lisa auto järjekorda",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": { "description": "Auto lisatud järjekorda" },
          "400": { "description": "Auto on juba järjekorras või vigased andmed" }
        }
      },
      "delete": {
        "tags": ["Järjekord"],
        "summary": "Eemalda auto järjekorrast",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": { "description": "Auto eemaldatud järjekorrast" },
          "404": { "description": "Auto ei ole järjekorras" }
        }
      },
      "put": {
        "tags": ["Järjekord"],
        "summary": "Uuenda auto järjekorda",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          },
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/AutoJärjekordUpdate"
            }
          }
        ],
        "responses": {
          "200": { "description": "Auto järjekorda uuendatud" },
          "404": { "description": "Auto ei leitud järjekorras" }
        }
      }
    }
