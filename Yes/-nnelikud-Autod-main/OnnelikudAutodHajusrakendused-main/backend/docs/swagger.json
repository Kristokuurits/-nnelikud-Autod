{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "Õnnelike Autode API",
      "description": "API autoteenuste ja järjekorra haldamiseks"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "schemes": ["http"],
    "paths": {
      "/onnelikud-autod": {
        "get": {
          "summary": "Kõik õnnelikud autod",
          "description": "Pealkiri: Õnnelikud autod",
          "responses": {
            "200": {
              "description": "Tagastab kõik autod",
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/Auto"
                }
              }
            }
          }
        },
        "post": {
          "summary": "Lisa uus auto",
          "parameters": [
            {
              "in": "body",
              "name": "body",
              "required": true,
              "schema": {
                "$ref": "#/definitions/UusAuto"
              }
            }
          ],
          "responses": {
            "201": { "description": "Uus auto lisatud" },
            "400": { "description": "Vigased andmed" }
          }
        }
      },
      "/onnelikud-autod/{id}": {
        "get": {
          "summary": "Leia auto ID järgi",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "type": "integer"
            }
          ],
          "responses": {
            "200": {
              "description": "Tagastab auto detailid",
              "schema": {
                "$ref": "#/definitions/Auto"
              }
            },
            "404": { "description": "Autot ei leitud" }
          }
        },
        "put": {
          "summary": "Uuenda auto andmeid",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "type": "integer"
            },
            {
              "in": "body",
              "name": "body",
              "required": true,
              "schema": {
                "$ref": "#/definitions/UusAuto"
              }
            }
          ],
          "responses": {
            "200": { "description": "Auto uuendatud" },
            "404": { "description": "Autot ei leitud" }
          }
        },
        "delete": {
          "summary": "Kustuta auto",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "type": "integer"
            }
          ],
          "responses": {
            "200": { "description": "Auto kustutatud" },
            "404": { "description": "Autot ei leitud" }
          }
        }
      },
      "/auto-jarjekord": {
        "get": {
          "summary": "Vaata auto järjekorda",
          "description": "Pealkiri: Järjekord",
          "responses": {
            "200": {
              "description": "Tagastab kõik järjekorras olevad autod",
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/Auto"
                }
              }
            }
          }
        }      
      },
      "/auto-jarjekord/{id}": {
        "post": {
          "summary": "Lisa auto järjekorda",
          "description": "Pealkiri: Järjekord",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "type": "integer"
            }
          ],
          "responses": {
            "200": { "description": "Auto lisatud järjekorda" },
            "400": { "description": "Vigane päring" }
          }
        },
        "delete": {
          "summary": "Eemalda auto järjekorrast",
          "description": "Pealkiri: Järjekord",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "type": "integer"
            }
          ],
          "responses": {
            "200": { "description": "Auto eemaldatud järjekorrast" },
            "404": { "description": "Autot järjekorras ei leitud" }
          }
        }
      }
    },
    "definitions": {
      "Auto": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "price": { "type": "number" },
          "buttons": { "type": "array", "items": { "type": "string" } }
        }
      },
      "UusAuto": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": { "type": "string" },
          "price": { "type": "number" }
        }
      }
    }
  }
  